<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/sketcherNameSelectionTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="מיאו"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/midofRowSketcherSelectionGL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sketcherSelectionMidGL"
        app:layout_constraintTop_toTopOf="@+id/midofRowSketcherSelectionGL" />

    <ImageView
        android:id="@+id/sketcherIconSelectionIV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/midofRowSketcherSelectionGL"
        app:layout_constraintEnd_toStartOf="@+id/sketcherSelectionMidGL"
        app:layout_constraintTop_toTopOf="@+id/midofRowSketcherSelectionGL"
        app:srcCompat="@drawable/ic_star_blue" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midofRowSketcherSelectionGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sketcherSelectionMidGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />
</androidx.constraintlayout.widget.ConstraintLayout>