<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_blue_transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/headlineBackgroundTV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dark_blue_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultsLayerNameTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchResultsLayerNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="layer name"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchResultsBackTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchResultsBackTV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_backwards_bar"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultsLayerNameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchResultsRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/searchResultsCloseTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchResultsLayerNameTV" />

    <TextView
        android:id="@+id/searchResultsCloseTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:textSize="20sp"
        android:padding="16dp"
        android:gravity="center"
        android:textColor="@color/light_blue"
        android:background="@color/dark_blue_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>