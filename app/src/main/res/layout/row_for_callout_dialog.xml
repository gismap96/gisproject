<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_for_row_callout_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:layout_marginEnd="16dp"
        android:text="מיאו"
        android:textColor="@color/white"
        android:textSize="24sp"

        app:layout_constraintBottom_toTopOf="@+id/midOfRowGL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/layerSelectionDialogLegendImage"
        app:layout_constraintTop_toTopOf="@+id/midOfRowGL" />

    <ImageView
        android:id="@+id/layerSelectionDialogLegendImage"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/midOfRowGL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/midOfRowGL"
        app:srcCompat="@drawable/ic_star_blue" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midOfRowGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>