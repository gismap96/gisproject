<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LayerCalloutDialog.DialogLayerSelectionFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/layerCalloutDialogRecyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/details_dialog_background"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/closePopupDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headlineForLayerSelection" />

    <Button
        android:id="@+id/closePopupDialog"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#E6010b1f"
        android:text="@string/close"
        android:textAlignment="center"
        android:textColor="#3fadf8"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layerCalloutDialogRecyclerview" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/headlineForLayerSelection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#010b1f"
        android:padding="16dp"
        android:text="@string/choose_a_layer"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>