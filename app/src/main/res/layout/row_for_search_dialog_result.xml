<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fidFieldHeadlineTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="FID"
        android:textColor="@color/details_dialog_key_text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/searchVerticalGL30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/searchVerticalGL30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/searchFieldNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/key"
        android:textColor="@color/details_dialog_key_text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultValueTV"
        app:layout_constraintEnd_toStartOf="@+id/searchVerticalGL30"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchFidValueResultTV"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/searchFidValueResultTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="FID"
        android:textColor="@color/details_dialog_key_text_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fidFieldHeadlineTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/searchVerticalGL30"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchResultValueTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/value"
        android:textColor="@color/details_dialog_key_text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/searchVerticalGL30"
        app:layout_constraintTop_toBottomOf="@+id/searchFidValueResultTV" />
</android.support.constraint.ConstraintLayout>